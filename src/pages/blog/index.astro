---
import ContentLayout from '../../layouts/ContentLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<ContentLayout title="Blog">
  <div class="space-y-12">
    <header>
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Blog</h1>
      <p class="text-gray-600">Thoughts, guides, and updates.</p>
    </header>

    <div class="space-y-10">
      {posts.map((post) => (
        <article class="group relative flex flex-col items-start">
          <time class="mb-2 text-sm text-gray-500" datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <h2 class="text-2xl font-bold tracking-tight text-gray-900 group-hover:text-blue-600 transition-colors">
            <a href={`/blog/${post.slug}/`}>
              <span class="absolute -inset-x-4 -inset-y-6 z-0 scale-95 bg-gray-50 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 sm:-inset-x-6 sm:rounded-2xl"></span>
              <span class="relative z-10">{post.data.title}</span>
            </a>
          </h2>
        </article>
      ))}
    </div>
  </div>
</ContentLayout>
