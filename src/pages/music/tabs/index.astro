---
import ContentLayout from '../../../layouts/ContentLayout.astro';
import { getCollection } from 'astro:content';

const tabs = await getCollection('music');
---

<ContentLayout title="Music Tabs" authorName="Music">
  <div class="space-y-8">
    <header>
      <div class="flex items-center gap-2 text-orange-600 mb-2">
        <a href="/music/" class="hover:underline text-sm font-semibold">Music Home</a>
        <i class="fas fa-chevron-right text-[10px]"></i>
        <span class="text-sm font-semibold">Tabs</span>
      </div>
      <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 mb-4 sm:text-5xl">Music Tabs</h1>
      <p class="text-xl text-gray-500 leading-relaxed max-w-2xl">Looking for some amateur ukulele tabs? Check them out below!
</p>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 not-prose">
      {tabs.map((tab) => (
        <a 
          href={`/music/tabs/${tab.slug}/`} 
          class="group flex flex-col rounded-xl border border-gray-100 bg-white shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 overflow-hidden no-underline !text-inherit"
        >
          <div class="aspect-video overflow-hidden bg-gray-100 relative">
            {tab.data.header?.teaser ? (
              <img 
                src={tab.data.header.teaser} 
                alt={tab.data.title} 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center bg-orange-50 text-orange-200">
                <i class="fas fa-music text-4xl"></i>
              </div>
            )}
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300"></div>
          </div>
          
          <div class="p-4 flex flex-col flex-grow">
            <div class="flex items-center justify-between mb-3">
              <div class="p-2 bg-orange-50 text-orange-600 rounded-lg group-hover:bg-orange-600 group-hover:text-white transition-colors">
                <i class="fas fa-music text-sm"></i>
              </div>
              <i class="fas fa-chevron-right text-xs text-gray-300 group-hover:text-gray-900 transition-colors"></i>
            </div>
            <h2 class="text-base font-bold text-gray-900 group-hover:text-orange-600 transition-colors leading-tight mb-2">
              {tab.data.title}
            </h2>
            {tab.data.excerpt && (
              <p class="text-xs text-gray-500 line-clamp-2 mb-3 no-underline">
                {tab.data.excerpt}
              </p>
            )}
            <p class="mt-auto text-[10px] text-gray-400 font-bold uppercase tracking-wider">View Details &rarr;</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</ContentLayout>
