---
import { SITE, NAVIGATION } from '../config';
import { Image } from 'astro:assets';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title, description = SITE.description } = Astro.props;
const siteTitle = title ? `${title} | ${SITE.title}` : SITE.title;

const leftNav = NAVIGATION.slice(0, 2);
const rightNav = NAVIGATION.slice(2);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle}</title>
    <meta name="description" content={description} />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
    <link rel="manifest" href="/assets/favicon/site.webmanifest">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body class="bg-white text-gray-900 font-sans min-h-screen flex flex-col">
    <header class="border-b border-gray-200 sticky top-0 z-50 bg-white/80 backdrop-blur-md">
      <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-center py-4 space-x-2 sm:space-x-6">
          <!-- Left Links -->
          <div class="flex items-center space-x-1 sm:space-x-2">
            {leftNav.map((item) => (
              <a
                href={item.url}
                class="relative px-2 sm:px-3 py-1 text-xs sm:text-sm font-bold text-gray-600 hover:text-blue-600 transition-all duration-300 uppercase tracking-widest whitespace-nowrap group"
              >
                {item.title}
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
              </a>
            ))}
          </div>

          <!-- Center Logo -->
          <a href="/" class="flex-shrink-0 flex items-center px-2 group">
            <Image 
              src="/assets/favicon/apple-touch-icon.png" 
              alt="Ethan P Lee Logo" 
              width={40} 
              height={40} 
              class="w-10 h-10 rounded-full object-cover border-2 border-white shadow-md group-hover:scale-110 transition-all duration-300" 
            />
          </a>

          <!-- Right Links -->
          <div class="flex items-center space-x-1 sm:space-x-2">
            {rightNav.map((item) => (
              <a
                href={item.url}
                class="relative px-2 sm:px-3 py-1 text-xs sm:text-sm font-bold text-gray-600 hover:text-blue-600 transition-all duration-300 uppercase tracking-widest whitespace-nowrap group"
              >
                {item.title}
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
              </a>
            ))}
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-grow max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10 w-full">
      <slot />
    </main>

    <footer class="border-t border-gray-100 py-10 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-[1fr_auto_1fr] gap-8 items-center text-gray-500 text-sm">
          <!-- Left: Copyright -->
          <div class="text-center md:text-left md:whitespace-nowrap">
            &copy; {new Date().getFullYear()} {SITE.author}.
          </div>

          <!-- Center: Tech Stack -->
          <div class="text-center flex flex-wrap md:flex-nowrap justify-center items-center gap-x-4 gap-y-2 md:whitespace-nowrap">
            <div class="flex items-center gap-1.5 group">
              <span class="text-gray-400 group-hover:text-gray-600 transition-colors">Built With</span>
              <span class="text-gray-900 font-bold group-hover:text-blue-600 transition-colors">Astro</span>
            </div>
            <div class="text-gray-200">|</div>
            <div class="flex items-center gap-1.5 group">
              <span class="text-gray-400 group-hover:text-gray-600 transition-colors">Styled With</span>
              <span class="text-gray-900 font-bold group-hover:text-blue-600 transition-colors">Tailwind CSS</span>
            </div>
            <div class="text-gray-200">|</div>
            <div class="flex items-center gap-1.5 group">
              <span class="text-gray-400 group-hover:text-gray-600 transition-colors">Deployed On</span>
              <span class="text-gray-900 font-bold group-hover:text-blue-600 transition-colors">GitHub Pages</span>
            </div>
          </div>

          <!-- Right: Social/Contact -->
          <div class="flex justify-center md:justify-end space-x-6 md:whitespace-nowrap">
            <a href={SITE.linkedin_url} target="_blank" rel="noopener noreferrer" class="hover:text-[#0077b5] transition-colors flex items-center gap-2">
              <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            <a href={`mailto:${SITE.email}`} class="hover:text-rose-500 transition-colors flex items-center gap-2">
              <i class="fas fa-envelope"></i> Contact
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
