---
import { AUTHORS } from '../config';

interface Props {
  authorName?: string;
}

const { authorName = 'Ethan Lee' } = Astro.props;
const author = AUTHORS[authorName] || AUTHORS['Ethan Lee'];
---

<aside class="space-y-8">
  <div class="flex flex-col items-center lg:items-start text-center lg:text-left">
    <img
      src={author.avatar}
      alt={author.name}
      class="w-32 h-32 rounded-full border border-gray-200 shadow-sm lg:w-48 lg:h-48 mb-4 object-cover"
    />
    <div>
      <h2 class="text-2xl font-bold text-gray-900 tracking-tight">{author.name}</h2>
      <p class="text-gray-600 mt-2 leading-relaxed">{author.bio}</p>
    </div>
  </div>

  <div class="space-y-4">
    {author.location && (
      <div class="flex items-center space-x-3 text-gray-500 text-sm">
        <i class="fas fa-map-marker-alt w-4 text-center"></i>
        <span>{author.location}</span>
      </div>
    )}
    
    <div class="pt-4 border-t border-gray-100 flex flex-col space-y-3">
      {author.links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center space-x-3 text-gray-500 hover:text-gray-900 text-sm transition-colors group"
        >
          <i class={`${link.icon} w-4 text-center group-hover:scale-110 transition-transform`}></i>
          <span>{link.label}</span>
        </a>
      ))}
    </div>
  </div>
</aside>
