---
import { AUTHORS, SITE } from '../config';
import { getSkillIcon } from '../utils/icons';

interface Props {
  authorName?: string;
  projectSidebar?: Array<{ title: string; text: string }>;
  headings?: Array<{ depth: number; slug: string; text: string }>;
  showProfile?: boolean;
}

const { authorName = 'Home', projectSidebar, headings, showProfile = true } = Astro.props;
const author = AUTHORS[authorName] || AUTHORS['Home'];
const youtubeLink = author.links.find(link => link.label === 'YouTube')?.url;
const profileLink = authorName === 'Music' ? youtubeLink : '/about/';
const isExternal = authorName === 'Music';
---

  {showProfile && (
    <div class="flex flex-col items-center lg:items-start text-center lg:text-left mb-8">
      <a 
        href={profileLink} 
        target={isExternal ? "_blank" : "_self"} 
        rel={isExternal ? "noopener noreferrer" : ""} 
        class="block hover:opacity-90 transition-opacity"
      >
        <img
          src={author.avatar}
          alt={author.name}
          class="w-32 h-32 rounded-full border-4 border-white shadow-lg lg:w-48 lg:h-48 mb-4 object-cover"
        />
      </a>
      <div>
        <h2 class="text-2xl font-bold text-gray-900 tracking-tight">{author.name}</h2>
        <p class="text-gray-600 mt-2 leading-relaxed">{author.bio}</p>
        {author.quote && (
          <p class="text-gray-500 mt-2 italic text-sm leading-relaxed border-l-2 border-blue-100 pl-3">
            "{author.quote}"
          </p>
        )}
      </div>

      <div class="space-y-4 w-full mt-6">
        {author.location && (
          <div class="flex items-center space-x-3 text-gray-500 text-sm">
            <i class="fas fa-map-marker-alt w-4 text-center" aria-hidden="true"></i>
            <span>{author.location}</span>
          </div>
        )}
        
        <div class="pt-4 flex flex-wrap gap-6 justify-center lg:justify-start items-center">
          <a 
            href={`mailto:${author.email || SITE.email}`} 
            class="text-rose-500 hover:scale-125 hover:-translate-y-1 active:scale-95 transition-all duration-300 text-5xl" 
            title="Email"
            aria-label={`Send an email to ${author.name}`}
          >
            <i class="fas fa-envelope" aria-hidden="true"></i>
          </a>
          {author.links.map((link) => (
            <a 
              href={link.url} 
              target="_blank" 
              rel="noopener noreferrer" 
              class={`${link.color || 'text-gray-400'} hover:scale-125 hover:-translate-y-1 active:scale-95 transition-all duration-300 text-5xl`} 
              title={link.label}
              aria-label={`Visit Ethan's ${link.label} profile`}
            >
              <i class={link.icon} aria-hidden="true"></i>
            </a>
          ))}
        </div>
      </div>
    </div>
  )}

  {projectSidebar && (
    <div class="space-y-4 pt-6 border-t border-gray-100">
      <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400 mb-2">Project Details</p>
      <div class="bg-gray-50 rounded-xl p-4 border border-gray-100 divide-y divide-gray-200">
        {projectSidebar.map(item => (
          <div class="py-2.5 first:pt-0 last:pb-0">
            <span class="block text-[10px] font-bold text-gray-400 uppercase tracking-widest">{item.title}</span>
            <div class="flex items-center gap-2 mt-0.5">
              {!item.text.includes('<br>') && getSkillIcon(item.text) !== 'fas fa-code text-gray-400' && (
                <i class={`${getSkillIcon(item.text)} text-sm`}></i>
              )}
              <span class="block text-gray-700 font-semibold text-sm" set:html={item.text}></span>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}

  {authorName === 'Personal' && (
    <div class="space-y-4 pt-6 border-t border-gray-100">
      <div class="p-3 bg-gray-50 rounded-xl border border-gray-100 flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-yellow-100 flex-shrink-0 flex items-center justify-center text-yellow-600 text-lg">
          <i class="fas fa-house"></i>
        </div>
        <div>
          <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Origin</p>
          <p class="text-sm font-bold text-gray-900 leading-tight">San Diego, CA <i class="fas fa-sun text-yellow-500 ml-1"></i></p>
        </div>
      </div>

      <div class="p-3 bg-gray-50 rounded-xl border border-gray-100 flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-blue-100 flex-shrink-0 flex items-center justify-center text-blue-600 text-lg">
          <i class="fas fa-face-smile"></i>
        </div>
        <div>
          <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Personality Type</p>
          <div class="flex items-center gap-1.5">
            <p class="text-sm font-bold text-gray-900 leading-tight">ESFJ</p>
            <a href="https://www.16personalities.com/esfj-personality" target="_blank" class="text-blue-500 hover:text-blue-700 text-[10px]">
              <i class="fas fa-info-circle"></i>
            </a>
          </div>
        </div>
      </div>

      <div class="p-3 bg-gray-50 rounded-xl border border-gray-100 flex items-center gap-3 group transition-all hover:bg-white hover:shadow-sm">
        <div class="w-10 h-10 rounded-full bg-orange-100 flex-shrink-0 flex items-center justify-center text-orange-600 text-lg group-hover:bg-orange-200 transition-colors">
          <i class="fas fa-bread-slice"></i>
        </div>
        <div class="flex-grow">
          <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Favorite Food</p>
          <p class="text-sm font-bold text-gray-900 leading-tight">Sandwiches</p>
          <p class="text-[11px] text-gray-500 mt-1 leading-tight hidden group-hover:block">
            ...and also tacos under <a href="https://cuberule.com/" target="_blank" class="text-blue-500 hover:underline">The Cube Rule</a>
          </p>
        </div>
      </div>

      <div class="p-3 bg-gray-50 rounded-xl border border-gray-100 flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-green-100 flex-shrink-0 flex items-center justify-center text-green-600 text-lg">
          <i class="fas fa-football"></i>
        </div>
        <div>
          <p class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Favorite Hobby</p>
          <p class="text-sm font-bold text-gray-900 leading-tight">Fantasy Football</p>
        </div>
      </div>
    </div>
  )}

  {authorName === 'About' && (
    <div class="space-y-6 pt-6 border-t border-gray-100">
      <!-- Key Values moved to main content -->
    </div>
  )}
